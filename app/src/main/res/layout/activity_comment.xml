<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_comment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/holo_red_light"/>
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/holo_red_light"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/goback_ic"/>

        <TextView

            android:id="@+id/comment_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="返回"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/comment_commit"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:gravity="center"
            android:text="电影未开场前未购票用户不计入观众评分"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/my_score_rating"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:secondaryProgressTint="@android:color/holo_red_light"
            android:progressTint="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0.0"
            android:stepSize="0.5"/>
        <EditText
            android:id="@+id/comment_content"
            android:gravity="top"
            android:background="@null"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="好看吗？快来写下你的感受吧~"/>
    </LinearLayout>


</LinearLayout>
