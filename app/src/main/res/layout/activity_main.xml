    <LinearLayout
       android:id="@+id/bottom_layout_main"
       android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/imv_1"
          android:layout_weight="1"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/shouye"

          />

      <ImageView
          android:layout_weight="1"
          android:id="@+id/imv_2"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/yingyuan" />

      <ImageView
          android:layout_weight="1"
          android:id="@+id/imv_3"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/shipin" />

      <ImageView
          android:layout_weight="1"
          android:id="@+id/imv_4"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/wode" />
  </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/main_bt_tv1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="主页"/>
            <TextView
                android:id="@+id/main_bt_tv2"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="电影/影院"/>
            <TextView
                android:id="@+id/main_bt_tv3"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="预告片"/>
            <TextView
                android:id="@+id/main_bt_tv4"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="我的"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>
