<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/of_ic"/>
        <TextView
            android:id="@+id/of_ids"
            android:layout_toRightOf="@+id/of_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/of_ids"
            android:id="@+id/of_phone"
            android:layout_toRightOf="@id/of_ic"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/of_ticket_num"
            android:layout_below="@+id/of_phone"
            android:layout_toRightOf="@id/of_ic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/of_content"
            android:layout_below="@+id/of_ticket_num"
            android:layout_toRightOf="@+id/of_ic"/>
         <Button
             android:id="@+id/of_topay"
             android:visibility="gone"
             android:textColor="@android:color/white"
             android:background="@android:color/holo_red_light"
             android:layout_below="@+id/of_content"
             android:layout_toRightOf="@+id/of_ic"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="去支付"/>




    </RelativeLayout>
</RelativeLayout>
